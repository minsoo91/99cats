<div class="container" style="padding: 400px 0px 15px 0px">
<form action="<%= cat_rental_requests_url %>" method="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">
  <div class="col-md-2 col-md-offset-1" style="padding: 8px 0px 15px 0px">
    <select name="cat_rental_request[cat_id]"
            id="cat_rental_request_cat_id">
      <option disabled="disabled" 
      <%="selected" if @cat_rental_request.cat_id.nil? %>>Pick a cat</option>
       <% Cat.all.each do |cat_obj|%>
         <option value="<%= cat_obj.id %>" 
           <%="selected" if @cat_rental_request.cat_id == cat_obj.id %>>
           <%= cat_obj.name %></option>
       <%end%>
    </select>
  </div>

 <div class="col-md-3">
    <label for="cat_rental_request_start_date">Start Date</label>
    <input type="date" name="cat_rental_request[start_date]"    
            value="<%=@cat_rental_request.start_date %>">
  </div>
  <div class="col-md-3">
    <label for="cat_rental_request_end_date">End Date</label>
    <input type="date" name="cat_rental_request[end_date]"    
            value="<%=@cat_rental_request.end_date  %>">
  </div>
  <div class="col-md-3" style="padding: 8px 0px 15px 0px">
    <input type="submit" value="Rent-a-Cat!">
  </div>
</form>
</div>