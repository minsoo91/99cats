<% if @cat.persisted? %>
<% action = cat_url(@cat)%>
<% else %>
<% action = cats_url %>
<% end %>
<div class="container">
<form action="<%= action %>" method="post" role="form">
  <% if @cat.persisted? %>
    <input type="hidden" name="_method" value="PATCH" >
  <% end %>
  <div class="form-group" style="padding: 15px 0px 15px 0px">
      <label for="cat_name" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" name="cat[name]" value="<%=@cat.name %>">
      </div>
  </div>
  <div class="form-group" style="padding: 15px 0px 15px 0px">
    <div class="col-md-2">
      <label for="cat_birth_date" class="control-label">Birth Date</label>
    </div>
    <div class="col-md-10">
      <input type="date" name="cat[birth_date]" value="<%=@cat.birth_date %>">
    </div>
  </div>
  <div class="form-group" style="padding: 15px 0px 15px 0px">
    <div class="col-md-2">
      <label class = "control-label">Sex</label>
    </div>
    <div class="col-md-10">
      <label class="radio-inline" for="cat_sex_female">
        <input type="radio" name="cat[sex]" id="cat_sex_female" value="F"
        <%= checked="checked" if @cat.sex == "F" %>>Female
      </label>
      
      <label class="radio-inline" for="cat_sex_male">
        <input type="radio" name="cat[sex]" id="cat_sex_male" value="M"
        <%= checked="checked" if @cat.sex == "M" %>>Male
      </label>
    </div>
  </div>
  <div class="form-group" style="padding: 0px 0px 15px 0px">
    <div class="col-md-2">
     <label for="cat_color">Color</label>
    </div>
    <div class="col-md-2">
      <select class="form-control col-md-4" name="cat[color]" id="cat_color" width="100">
        <option disabled="disabled"
                <%="selected" if @cat.color.nil? %>>Pick a color</option>
        <% Cat::COLORS.each do |color|%>
          <option value="<%= color %>" 
            <%="selected" if @cat.color == color %>>
            <%= color %></option>
        <%end%>
      </select>
    </div>
    <div class="col-md-8 col-md-offset-4">
    </div>
  </div>
  <div class="form-group" style="padding: 15px 0px 15px 0px">
    <div class="col-md-2">
      <label for="cat_description" class="control-label">Description</label>
    </div>
    <div class="col-md-10">
      <textarea name="cat[description]"><%=@cat.description %></textarea>
    </div>
  </div>
  <div class="form-group" style="padding: 30px 0px 15px 0px">
    <div class="col-md-4 col-md-offset-2">
      <input type="submit" value="Create cat" class = "btn btn-default btn-md btn-primary">
    </div>
  </div>
</form>
</div>