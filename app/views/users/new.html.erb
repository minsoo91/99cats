<h1> MAKE A NEW USER :| </h1>
<div class="container col-md-offset-4">
  <form action="/user" method="post" role="form">
    <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
    <div class="form-group" style="padding: 15px 0px 15px 0px">
        <label for="user_user_name" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          <input type="text" name="user[user_name]" value="<%=@user.user_name %>">
        </div>
    </div>
    <div class="form-group" style="padding: 15px 0px 15px 0px">
        <label for="user_password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input type="password" name="user[password]" value="<%=@user.password %>">
        </div>
    </div>
  
    <div class="form-group" style="padding: 30px 0px 15px 0px">
      <div class="col-md-4 col-md-offset-2">
        <input type="submit" value="Create newd user!" class="btn btn-default btn-md btn-primary">
      </div>
    </div>
  </form>
</div>